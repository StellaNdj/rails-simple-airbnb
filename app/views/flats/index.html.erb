<h1 class="ms-5">All our flats </h1>
<h3 class="ms-5">All <%= @flats.count %> flats</h3>
<% @flats.each do |flat| %>
  <div class="d-flex justify-content-evenly">
    <div class="card" style="width: 18rem;">
    <img src="https://images.unsplash.com/photo-1556784344-ad913c73cfc4?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Flat interior">
    <div class="card-body">
      <h5 class="card-title"><%= flat.name %></h5>
      <p class="card-text"><%= flat.description %></p>
      <i class="fa-solid fa-people-line"><%= flat.number_of_guests %></i>
      <i class="fa-solid fa-euro-sign"><%= flat.price_per_night %></i>
      <div class="d-flex inline justify-content-evenly">
        <a><%= link_to 'More info', flat_path(flat), class: "text-primary" %></a>
        <p><%= link_to 'Edit', edit_flat_path(flat), class: "text-warning" %></p>
        <p><%= link_to 'Remove', flat_path(flat),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-danger"%></p>
      </div>
      </div>
  </div>
<% end %>
